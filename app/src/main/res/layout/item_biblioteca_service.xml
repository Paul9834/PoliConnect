<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/itemBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/library_one_avaliable"/>

    <TextView
        android:id="@+id/itemCubName"
        android:paddingTop="10sp"
        android:paddingLeft="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/servicio"
        android:textColor="@color/white"
        android:fontFamily="@font/rokkitt"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/itemCubNum"
        android:paddingTop="12sp"
        android:paddingLeft="200sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numerogenerico"
        android:textColor="@color/white"
        android:fontFamily="@font/rokkitt"
        android:textSize="28sp"/>



</RelativeLayout>